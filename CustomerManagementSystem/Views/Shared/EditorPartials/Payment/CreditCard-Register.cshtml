@model CMS.ViewModels.Payment.NewCardVM

@using CMS.Localization;

@using (Ajax.BeginForm("CreditCardRegister", "Payment", new AjaxOptions { HttpMethod = "POST", OnComplete = "AddCard" }, new { @class = "form mt-0 mt-lg-10 fv-plugins-bootstrap fv-plugins-framework", @id = "kt_form" }))
{
    @Html.AntiForgeryToken()
    <div id="second-content" class="pb-5">
        <h4 class="mb-10 font-weight-bold text-dark">
            @Common.SetCardInfoes
        </h4>
        <div class="row">
            <div class="col-xl-6">
                <div class="form-group fv-plugins-icon-container">
                    <label>@Html.DisplayNameFor(m => m.CCName)</label>
                    @Html.EditorFor(m => m.CCName, new { htmlAttributes = new { @class = "form-control form-control-solid form-control-lg", @placeholder = "Adı Soyadı", autocomplete = "off" } })
                    <span class="form-text text-muted">
                        @Common.SetCardFullName
                    </span>
                    <div class="fv-plugins-message-container">
                        @Html.ValidationMessageFor(m => m.CCName, null, new { @class = "fv-help-block" })
                    </div>
                </div>
            </div>
            <div class="col-xl-6">
                <div class="form-group fv-plugins-icon-container">
                    <label>@Html.DisplayNameFor(m => m.CCNumber)</label>
                    @Html.EditorFor(m => m.CCNumber, new { htmlAttributes = new { @class = "form-control form-control-solid form-control-lg", @placeholder = "Kart Numarası", autocomplete = "off" } })
                    <span class="form-text text-muted">
                        @Common.SetCardNumber
                    </span>
                    <div class="fv-plugins-message-container">
                        @Html.ValidationMessageFor(m => m.CCNumber, null, new { @class = "fv-help-block" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-4">
                <div class="form-group fv-plugins-icon-container">
                    <label>
                        @Html.DisplayNameFor(m => m.CCMonth)
                    </label>
                    @Html.EditorFor(m => m.CCMonth, new { htmlAttributes = new { @class = "form-control form-control-solid form-control-lg", @placeholder = "Son Kullanma Ayı", autocomplete = "off" } })
                    <span class="form-text text-muted">
                        @Common.SetCardExpirationMonth
                    </span>
                    <div class="fv-plugins-message-container">
                        @Html.ValidationMessageFor(m => m.CCMonth, null, new { @class = "fv-help-block" })
                    </div>
                </div>
            </div>
            <div class="col-xl-4">
                <div class="form-group fv-plugins-icon-container">
                    <label>
                        @Html.DisplayNameFor(m => m.CCYear)
                    </label>
                    @Html.EditorFor(m => m.CCYear, new { htmlAttributes = new { @class = "form-control form-control-solid form-control-lg", @placeholder = "Son Kullanma Yılı", autocomplete = "off" } })
                    <span class="form-text text-muted">
                        @Common.SetCardExpirationYear
                    </span>
                    <div class="fv-plugins-message-container">
                        @Html.ValidationMessageFor(m => m.CCYear, null, new { @class = "fv-help-block" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between border-top mt-5 pt-10">
        <div class="mr-2">
            <button onclick="window.location.href='/Payment/AddNewCard'" id="register-page-prev" type="button" class="btn btn-light-primary font-weight-bolder text-uppercase px-9 py-4">
                @Common.Prev
            </button>
        </div>
        <div>
            <button id="register-page-next" type="submit" class="btn btn-primary font-weight-bolder text-uppercase px-9 py-4">
                @Common.Next
            </button>
        </div>
    </div>
    <div></div>
    <div></div>
}