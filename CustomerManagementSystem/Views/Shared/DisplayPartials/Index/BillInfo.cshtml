@model CMS.ViewModels.Home.IndexViewModel
@using CMS.Localization;

@if (Model.UnPaidBillCount == 0)
{
    <div class="card card-custom card-stretch gutter-b">
        <div class="card-body d-flex p-0">
            <div class="flex-grow-1 p-15 pb-16 card-rounded flex-grow-1 bgi-no-repeat"
                 style="background-color: #30044e; background-position: calc(100% + 0.50rem) bottom; background-size: 35% auto; background-image: url(/assets/media/svg/files/1086741.svg)">
                <h3 class="text-white pb-6 font-weight-bolder">@Common.NoHaveUnpaidBills</h3>
                <p class="text-muted pb-5 font-size-h5">
                    <h3 class="text-white">@Common.Thanks</h3>
                </p>
                <br><br>
                <a href="@Url.Action("Bills","Payment")" class="btn btn-success font-weight-bold py-2 px-6">@Common.SeeAllInvoices</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="card card-custom card-stretch gutter-b">
        <div class="card-body d-flex p-0">
            <div class="flex-grow-1 p-15 pb-16 card-rounded flex-grow-1 bgi-no-repeat"
                 style="background-color: #30044e; background-position: calc(100% + 0.50rem) bottom; background-size: 35% auto; background-image: url(/assets/media/svg/files/1086741.svg)">
                <h3 class="text-white pb-6 font-weight-bolder">@Common.HaveUnpaidBills</h3>
                <p class="text-muted pb-5 font-size-h5">
                    @string.Format(Common.HaveUnpaidBillsInfo, Html.DisplayFor(m => m.SubscriberNo), Html.DisplayFor(m => m.UnPaidBillCount))
                    <br>@Common.CanPayWithCreditCardNow
                </p>
                <a href="@Url.Action("PayBill","Payment")" class="btn btn-danger font-weight-bold py-2 px-6">
                    @Common.QuickPay
                </a> <br><br>
                <a href="@Url.Action("Bills","Payment")" class="btn btn-success font-weight-bold py-2 px-6">@Common.SeeAllInvoices</a>
            </div>
        </div>
    </div>
}
