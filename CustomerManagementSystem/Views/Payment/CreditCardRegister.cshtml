@using CMS.Localization;

@{
    ViewBag.Title = Common.AutoPaymentAndAddCard;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/assets/css/pages/wizard/wizard-4.css")
<div class="container">
    <div class="flex-row-fluid ">
        <div class="card card-custom card-stretch">
            <div class="card-header py-3">
                <div class="card-title align-items-start flex-column">
                    <h3 class="card-label font-weight-bolder text-dark">
                        @Common.AutoPaymentAndAddCard
                    </h3>
                    <span class="text-muted font-weight-bold font-size-sm mt-1">
                        @Common.RegisteredCardsDescription
                    </span>
                </div>
                <div class="card-toolbar">
                    <a href="@Url.Action("PaymentInstruction","Payment")" class="btn btn-sm btn-light-info font-weight-bold mr-2">
                        @Common.RegisteredCards
                    </a>
                    <a href="/" class="btn btn-icon btn-sm btn-light-info">
                        <i class="flaticon-home-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <p></p>
    <div class="flex-row-fluid ">
        <div class="card card-custom card-transparent">
            <div class="card-body p-0">
                <div class="wizard wizard-4">
                    <div id="cc-wizard-content" class="wizard-nav">
                        @Html.Partial("~/Views/Shared/DisplayTemplates/Payment/Wizard/wizard-second.cshtml")
                    </div>
                    <div class="card card-custom card-shadowless rounded-top-0">
                        <div class="card-body p-0">
                            <div class="row justify-content-center py-8 px-8 py-lg-15 px-lg-10">
                                <div class="col-xl-12 col-xxl-7">
                                    <div id="cc-content-register">
                                        @Html.Partial("~/Views/Shared/EditorTemplates/Payment/CreditCard-Register.cshtml")
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/assets/js/pages/features/miscellaneous/sweetalert2.js")
    <script>
        $('input').keyup(function () {
            var id = $(this).attr("id");
            $('span[data-valmsg-for="' + id + '"]').text("");
        })
        function AddCard(data, status) {
            if (status == "success") {
                if (data.responseJSON) {
                    if (!data.valid) {
                        swal.fire({
                            icon: 'success',
                            title: '',
                            text: 'İşlem Başarılı. Onay sayfasına gitmek için tıklayın',
                            confirmButtonText: 'Tamam'
                        }).then((result) => {
                            window.location.href = "/Payment/CreditCardValidation";
                        });
                    }
                }
                else {
                    $('body').html(data.responseText);
                }
            }
        }
    </script>
}