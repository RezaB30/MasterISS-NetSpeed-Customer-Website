@model CMS.ViewModels.Home.SpecialOfferViewModel
@using CMS.Localization;

@{
    ViewBag.Title = SpecialOffer.SpecialOfferHeader;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="flex-row-fluid ">
        <div class="card card-custom card-stretch">
            <div class="card-header py-3">
                <div class="card-title align-items-start flex-column">
                    <h3 class="card-label font-weight-bolder text-dark">
                        @SpecialOffer.SpecialOfferHeader
                    </h3>
                    <span class="text-muted font-weight-bold font-size-sm mt-1">
                        @SpecialOffer.SpecialOfferDescription
                    </span>
                </div>
                <div class="card-toolbar">
                    <a href="@Url.Action("SpecialOfferDetails","Home")"
                       class="btn btn-sm btn-light-info font-weight-bold mr-2">@SpecialOffer.SpecialOfferDetails</a>
                    <a href="/" class="btn btn-icon btn-sm btn-light-info">
                        <i class="flaticon-home-2"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-xl-6">
            <div class="card card-custom card-stretch gutter-b">
                <div class="card-body d-flex p-0">
                    <div class="flex-grow-5 bg-light-warning p-14 pb-18 card-rounded flex-grow-1 bgi-no-repeat"
                         style="background-position: right bottom; background-size: 34% auto; background-image: url(/assets/media/svg/humans/hero-3.svg)">
                        <h3 class="text-danger pb-5 font-weight-bolder"> @SpecialOffer.InviteYourFriends </h3>
                        <p class="text-dark-75 pb-5 font-size-h6">
                            @SpecialOffer.SpecialOfferInfo1
                            <br>@SpecialOffer.SpecialOfferInfo2
                            <br>@SpecialOffer.SpecialOfferInfo3
                            <br>@SpecialOffer.SpecialOfferInfo4
                            <br>@SpecialOffer.SpecialOfferInfo5
                        </p>
                        <div class="font-size-h2 mb-7 text-dark-50">
                            @SpecialOffer.InviteCode
                            <div class="text-info font-weight-boldest ml-2">@Html.DisplayFor(m => m.ReferenceNo)</div>
                        </div>
                        <a href="@Url.Action("SpecialOfferDetails","Home")" class="btn btn-danger font-weight-bold py-2 px-6">@SpecialOffer.SpecialOfferDetails</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card card-custom card-stretch gutter-b">
                <div class="card-body d-flex p-0">
                    <div class="flex-grow-6 p-12 pb-12 card-rounded flex-grow-1 bgi-no-repeat" style="background-color: #56037b; background-position: right bottom; background-size: 30% auto; background-image: url(/assets/media/svg/illustrations/progress.svg)">
                        <h3 class="text-inverse-info pb-5 font-weight-bolder">
                            @SpecialOffer.HowJoinSpecialOffer
                        </h3>
                        <p class="text-inverse-info pb-5 font-size-h6">
                            @SpecialOffer.HowJoinExplain1
                            <br>
                            <br>@SpecialOffer.HowJoinExplain2<br>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card card-custom gutter-b">
        <div class="col-lg-4">
            <br>
            <div class="d-flex align-items-center pb-9">
                <div class="symbol symbol-45 symbol-light mr-4">
                    <span class="symbol-label">
                        <span class="svg-icon svg-icon-2x svg-icon-dark-50">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <polygon points="0 0 24 0 24 24 0 24"></polygon>
                                    <path d="M18,14 C16.3431458,14 15,12.6568542 15,11 C15,9.34314575 16.3431458,8 18,8 C19.6568542,8 21,9.34314575 21,11 C21,12.6568542 19.6568542,14 18,14 Z M9,11 C6.790861,11 5,9.209139 5,7 C5,4.790861 6.790861,3 9,3 C11.209139,3 13,4.790861 13,7 C13,9.209139 11.209139,11 9,11 Z"
                                          fill="#000000" fill-rule="nonzero" opacity="0.3"></path>
                                    <path d="M17.6011961,15.0006174 C21.0077043,15.0378534 23.7891749,16.7601418 23.9984937,20.4 C24.0069246,20.5466056 23.9984937,21 23.4559499,21 L19.6,21 C19.6,18.7490654 18.8562935,16.6718327 17.6011961,15.0006174 Z M0.00065168429,20.1992055 C0.388258525,15.4265159 4.26191235,13 8.98334134,13 C13.7712164,13 17.7048837,15.2931929 17.9979143,20.2 C18.0095879,20.3954741 17.9979143,21 17.2466999,21 C13.541124,21 8.03472472,21 0.727502227,21 C0.476712155,21 -0.0204617505,20.45918 0.00065168429,20.1992055 Z"
                                          fill="#000000" fill-rule="nonzero"></path>
                                </g>
                            </svg>
                        </span>
                    </span>
                </div>
                <div class="d-flex flex-column flex-grow-1">
                    <a href="#"
                       class="text-dark-75 text-hover-primary mb-1 font-size-lg font-weight-bolder">
                        @SpecialOffer.InviteCode
                    </a>
                    <span class="text-info font-size-lg font-weight-bolder">@Html.DisplayFor(m => m.ReferenceNo)</span>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="font-weight-nromal font-size-lg mb-6">
                <p>
                    @SpecialOffer.TableDescription
                </p>
            </div>
            <div class="mb-5">
                <!--begin::Table-->
                <div class="table-responsive">
                    <table class="table table-light table-light-primary">
                        <thead>
                            <tr>
                                <th>@Html.DisplayNameFor(m => m.SpecialOfferList.FirstOrDefault().ReferenceNo)</th>
                                <th class="table-center">@Html.DisplayNameFor(m => m.SpecialOfferList.FirstOrDefault().StartDate)</th>
                                <th class="table-center">@Html.DisplayNameFor(m => m.SpecialOfferList.FirstOrDefault().EndDate)</th>
                                <th class="table-center">@Html.DisplayNameFor(m => m.SpecialOfferList.FirstOrDefault().TotalCount)</th>
                                <th class="table-center">@Html.DisplayNameFor(m => m.SpecialOfferList.FirstOrDefault().UsedCount)</th>
                                <th class="table-center">@Html.DisplayNameFor(m => m.SpecialOfferList.FirstOrDefault().MissedCount)</th>
                                <th class="table-center">@Html.DisplayNameFor(m => m.SpecialOfferList.FirstOrDefault().RemainingCount)</th>
                                <th class="table-center">@Html.DisplayNameFor(m => m.SpecialOfferList.FirstOrDefault().IsApplicableThisPeriod)</th>
                                <th class="table-center">@Html.DisplayNameFor(m => m.SpecialOfferList.FirstOrDefault().ReferralSubscriberState)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.SpecialOfferList)
                            {
                                <tr>
                                    <td class="font-weight-bold table-row-title">@Html.DisplayFor(m => item.ReferenceNo)</td>
                                    <td class="table-center">@Html.DisplayFor(m => item.StartDate)</td>
                                    <td class="table-center">@Html.DisplayFor(m => item.EndDate)</td>
                                    <td class="table-center">@Html.DisplayFor(m => item.TotalCount)</td>
                                    <td class="table-center">@Html.DisplayFor(m => item.UsedCount)</td>
                                    <td class="table-center">@Html.DisplayFor(m => item.MissedCount)</td>
                                    <td class="table-center">@Html.DisplayFor(m => item.RemainingCount)</td>
                                    <td class="table-center">@Html.DisplayFor(m => item.IsApplicableThisPeriod)</td>
                                    <td class="table-center">@Html.DisplayFor(m => item.ReferralSubscriberState)</td>
                                </tr>
                            }
                        </tbody>
                        <thead>
                            <tr>
                                <th>@SpecialOffer.TotalDiscount</th>
                                <td class="table-center"></td>
                                <td class="table-center"></td>
                                <th class="table-center">@Html.DisplayFor(m => m.TotalEarnDiscount)</th>
                                <th class="table-center">@Html.DisplayFor(m => m.TotalUseDiscount)</th>
                                <th class="table-center">@Html.DisplayFor(m => m.TotalLoseDiscount)</th>
                                <th class="table-center">@Html.DisplayFor(m => m.TotalRemainingDiscount)</th>
                                <th class="table-center">@Html.DisplayFor(m => m.TotalThisPeriod)</th>
                                <th class="table-center"></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="font-weight-normal font-size-sm mb-6">
                <p>
                    @Html.Raw(SpecialOffer.SpecialOfferAbout)
                </p>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/assets/js/pages/widgets.js")
    @Scripts.Render("~/assets/js/pages/custom/todo/todo.js")
}